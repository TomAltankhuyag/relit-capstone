{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "@/user/*": ["./lib/features/user/*"],
      "@/groups/*": ["./lib/features/groups/*"],
      "@/devices/*": ["./lib/features/devices/*"],
      "@amplifyconfig": ["./amplifyconfiguration.json"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
